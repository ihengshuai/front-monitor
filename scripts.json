{
  "$schema": "https://raw.githubusercontent.com/iamyoki/better-scripts/main/lib/schema.json",
  "dev": {
    "alias": "Dev",
    "desc": "正在启动本地开发服务",
    "command": "pnpm --filter examples dev"
  },
  "build": {
    "alias": "Build",
    "desc": "打包组件",
    "command": "turbo run build --filter=!examples --filter=!docs"
  },
  "docs": {
    "alias": "Docs",
    "desc": "正在启动本地文档",
    "command": "pnpm --filter docs dev"
  },
  "test:unit": {
    "alias": "Unit Test",
    "desc": "单元测试",
    "command": "jest --config ./jest.config.ts"
  }
}
